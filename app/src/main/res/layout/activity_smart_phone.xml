<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/button_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmartPhone">

        <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/smartphone"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="21dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SmartPhone"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xiaomi Redmi 9A"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4G+64GB RAM"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5000mah battery"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="28MP+8MP Camera"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KES 14,900"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        android:layout_marginBottom="15dp"/>

    <Button
        android:background="@drawable/bg_button"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:id="@+id/mBtnBuyNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUY NOW"
        android:textSize="20dp"/>
</LinearLayout>