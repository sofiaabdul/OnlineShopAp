<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/button_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GasCooker">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/electricgascooker"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="21dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Electric GasCooker"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mika  Gas Cooker"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="60*60cm3"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Also having an oven"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "3Year Warrant"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KES 26,500"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        android:layout_marginBottom="20dp"/>

    <Button
        android:background="@drawable/bg_button"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/mBtnBuyNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUY NOW" />



</LinearLayout>